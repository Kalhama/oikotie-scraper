{
  "compilerOptions": {
    "sourceMap": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build/",
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/"
  ],
  
}
